<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_23sdp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/imageMusic"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/img1"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/titleMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Plan A"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageMusic"
                android:layout_margin="@dimen/_20sdp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageProfile2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/paulolondra"
                app:layout_constraintTop_toBottomOf="@id/titleMusic"
                android:theme="@style/circularImage"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paulo Londra"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/imageProfile2"
                app:layout_constraintBottom_toBottomOf="@id/imageProfile2"
                app:layout_constraintLeft_toRightOf="@id/imageProfile2"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/dateMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sencillo â€¢ 2022"
                android:textColor="#DBDBDB"
                app:layout_constraintTop_toBottomOf="@id/imageProfile2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/imageFav"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                app:layout_constraintTop_toBottomOf="@id/dateMusic"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/_20ssp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_graphic_eq_24"
                app:layout_constraintLeft_toRightOf="@id/imageFav"
                app:layout_constraintTop_toTopOf="@id/imageFav"
                app:layout_constraintBottom_toBottomOf="@id/imageFav"
                android:layout_marginStart="@dimen/_15sdp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/playMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imageFav"
                app:layout_constraintTop_toTopOf="@id/imageFav"
                android:layout_marginEnd="@dimen/_20sdp"
                app:backgroundTint="#1ED760"
                app:tint="@color/black"/>

            <TextView
                android:id="@+id/datePublication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 de junio de 2022"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/imageFav"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageProfile3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/paulolondra"
                android:scaleType="fitXY"
                android:theme="@style/circularImage"
                app:layout_constraintTop_toBottomOf="@id/datePublication"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paulo Londra"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/imageProfile3"
                app:layout_constraintBottom_toBottomOf="@id/imageProfile3"
                app:layout_constraintTop_toTopOf="@id/imageProfile3"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/titleLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambien te puede gustar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintTop_toBottomOf="@id/imageProfile3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_15sdp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/album1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/album1"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/titleLike"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="15dp"
                android:theme="@style/cornerRadius"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/album2"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/album2"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/titleLike"
                app:layout_constraintLeft_toRightOf="@id/album1"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="15dp"
                android:theme="@style/cornerRadius"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/album3"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/titleLike"
                app:layout_constraintLeft_toRightOf="@id/album2"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="15dp"
                android:theme="@style/cornerRadius"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>